{# Screenshot Comparison Slider #}
<section class="mt-16 md:mt-24">
  <div
    class="max-w-2xl mx-auto rounded-2xl overflow-hidden shadow-lg border-2 border-zinc-200 select-none"
    x-data="{
      position: 71,
      container: null,
      init() {
        this.container = this.$el;
      },
      startDrag() {
        window.addEventListener('mousemove', this.onDrag);
        window.addEventListener('mouseup', this.stopDrag);
        window.addEventListener('touchmove', this.onDrag);
        window.addEventListener('touchend', this.stopDrag);
      },
      stopDrag() {
        window.removeEventListener('mousemove', this.onDrag);
        window.removeEventListener('mouseup', this.stopDrag);
        window.removeEventListener('touchmove', this.onDrag);
        window.removeEventListener('touchend', this.stopDrag);
      },
      onDrag(e) {
        const rect = this.container.getBoundingClientRect();
        const x = (e.touches ? e.touches[0].clientX : e.clientX) - rect.left;
        this.position = Math.max(0, Math.min(100, (x / rect.width) * 100));
      }
    }"
    x-init="init(); onDrag = onDrag.bind($data); stopDrag = stopDrag.bind($data)"
    @mousedown="startDrag()"
    @touchstart="startDrag()"
  >
    <div class="relative aspect-video cursor-ew-resize">
      {# Light mode image (background/right side) #}
      <img
        src="./light-mode.png"
        alt="HubSpot DevTools - Light Mode"
        class="absolute inset-0 w-full h-full object-cover object-left-top pointer-events-none"
        draggable="false"
      >

      {# Dark mode image (foreground/left side with clip) #}
      <div
        class="absolute inset-0 overflow-hidden pointer-events-none"
        :style="'clip-path: inset(0 ' + (100 - position) + '% 0 0)'"
      >
        <img
          src="./dark-mode.png"
          alt="HubSpot DevTools - Dark Mode"
          class="absolute inset-0 w-full h-full object-cover object-left-top"
          draggable="false"
        >
      </div>

      {# Slider handle #}
      <div
        class="absolute top-0 bottom-0 w-1 bg-orange-500 shadow-lg -translate-x-1/2"
        :style="'left: ' + position + '%'"
      >
        {# Handle knob #}
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 size-10 rounded-full bg-orange-500 border-4 border-white shadow-lg flex items-center justify-center">
          {% phicon "arrows-out-line-horizontal", "bold", { class: "size-5 text-white" } %}
        </div>
      </div>

      {# Labels #}
      <div class="absolute top-3 left-3 px-2 py-1 bg-zinc-900/80 text-white text-xs font-medium rounded">
        Dark
      </div>
      <div class="absolute top-3 right-3 px-2 py-1 bg-white/90 text-zinc-900 text-xs font-medium rounded shadow">
        Light
      </div>
    </div>
  </div>
  <p class="text-center text-sm text-zinc-500 mt-4">
    Drag to compare dark and light themes
  </p>
</section>

