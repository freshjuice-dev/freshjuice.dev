              :class="canNavigateToStep2 ? 'cursor-pointer hover:opacity-75' : 'cursor-not-allowed opacity-50'">
        <div class="size-10 rounded-full flex items-center justify-center font-bold transition-colors"
             :class="currentStep >= 2 ? 'bg-orange-500 text-white' : 'bg-gray-200 text-gray-500'">
          2
        </div>
      </button>
      <div class="h-0.5 w-8 sm:w-12 transition-colors" :class="currentStep >= 3 ? 'bg-orange-500' : 'bg-gray-200'"></div>
      <button @click="navigateToStep(3)" class="transition-opacity"
              :class="canNavigateToStep3 ? 'cursor-pointer hover:opacity-75' : 'cursor-not-allowed opacity-50'">
        <div class="size-10 rounded-full flex items-center justify-center font-bold transition-colors"
             :class="currentStep >= 3 ? 'bg-orange-500 text-white' : 'bg-gray-200 text-gray-500'">
          3
        </div>
      </button>
    </div>
    {# Current step name #}
    <div class="text-center mt-3">
      <span class="text-base font-semibold text-orange-500" x-text="currentStep === 1 ? 'Input' : currentStep === 2 ? 'Review' : 'Generate'"></span>
    </div>
  </div>

  {# Loading Indicator #}
