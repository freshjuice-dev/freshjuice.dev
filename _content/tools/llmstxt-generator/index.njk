    {# Parse Results Summary (for sitemap method) #}
    <div x-show="inputMethod === 'sitemap' && parseResults" class="not-prose border-2 border-blue-200 rounded-2xl p-4 bg-blue-50 mb-6 select-none">
      <h3 class="text-base font-bold mt-0 mb-2">Sitemap Parsed Successfully</h3>
      <div class="grid sm:grid-cols-3 gap-4 text-sm">
        <div>
          <p class="text-blue-600 font-medium">Total URLs Found</p>
          <p class="text-2xl font-bold" x-text="totalUrls"></p>
        </div>
        <div>
          <p class="text-blue-600 font-medium">URLs Included</p>
          <p class="text-2xl font-bold" x-text="includedUrls"></p>
        </div>
        <div>
          <p class="text-blue-600 font-medium">Sitemaps Processed</p>
          <p class="text-2xl font-bold" x-text="sitemapsProcessed"></p>
        </div>
      </div>
      <div x-show="limitApplied" class="mt-3 p-3 bg-yellow-100 rounded-xl border border-yellow-300">
        <p class="text-xs text-yellow-800">
          {% phicon "warning", "duotone", { class: "size-4 inline mr-1" } %}
          <strong>Automatic prioritization applied:</strong> Found more than 100 URLs. The tool automatically prioritized core pages, product pages, documentation, and blog posts.
        </p>
      </div>
    </div>

    {# Analysis in Progress #}
    <div x-show="inputMethod === 'sitemap' && parseResults && processedCount === 0" class="py-8">
      <button @click="analyzeFromSitemap()" class="btn btn--blue" :disabled="isLoading">
        {% phicon "sparkle", "duotone", { class: "size-6" } %}
        <span>Analyze Selected URLs</span>
      </button>
    </div>

    {# Analyzed Pages #}
    <div x-show="processedCount > 0">

      <div class="not-prose flex flex-wrap items-center justify-between gap-4 mb-6 select-none">
        <div class="flex items-center gap-4 text-sm">
          <div class="flex items-center gap-2">
            <span class="text-gray-500">Analyzed:</span>
            <span class="font-bold text-green-600" x-text="processedCount"></span>
          </div>
          <div x-show="failedCount > 0" class="flex items-center gap-2">
            <span class="text-gray-500">Failed:</span>
            <span class="font-bold text-red-600" x-text="failedCount"></span>
          </div>
        </div>
        <div class="flex items-center gap-2">
          <button @click="selectAllPages()" class="btn btn--xs text-green-600 btn--ghost">Select All</button>
          <button @click="deselectAllPages()" class="btn btn--xs btn--ghost">Deselect All</button>
        </div>
      </div>

      <div class="not-prose mb-6 select-none">
        <p class="text-sm text-gray-600 mb-2">
          <span class="font-bold text-orange-600" x-text="totalSelectedPages"></span> pages selected for generation
        </p>
      </div>

      {# Pages by Category #}
      <template x-for="category in ['core', 'product', 'docs', 'resources', 'support', 'blog', 'company', 'legal', 'other']" :key="category">
        <div x-show="analyzedPages[category].length > 0" class="mb-6">
          <h3 class="flex items-center gap-2 mb-3 select-none">
            <span x-text="category.charAt(0).toUpperCase() + category.slice(1) + ' Pages'"></span>
            <span class="text-sm font-normal font-mono opacity-70" x-text="`(${analyzedPages[category].length})`"></span>
          </h3>

          <div class="not-prose space-y-2">
            <template x-for="page in analyzedPages[category]" :key="page.url">
              <label class="flex items-start gap-3 p-3 border-2 rounded-2xl cursor-pointer transition-all hover:border-orange-300 select-none"
                     :class="isPageSelected(page) ? 'border-orange-500 bg-orange-50' : 'border-gray-200'">
                <input
                  type="checkbox"
                  :checked="isPageSelected(page)"
                  @change="togglePageSelection(page)"
                  class="mt-1 size-4 rounded border-gray-300 text-orange-500 focus:ring-orange-500"
                >
                <div class="flex-1 min-w-0 clean-prose">
                  <p class="font-bold text-sm mb-1 truncate" x-text="cleanPageTitle(page.title)"></p>
                  <p class="text-xs opacity-80 mt-1 mb-2 line-clamp-2" x-text="page.description"></p>
                  <p class="text-xs opacity-65 mt-2 truncate font-mono" x-text="page.url"></p>
                </div>
              </label>
            </template>
          </div>
        </div>
      </template>

      {# Auto-Detected Site Metadata Notification #}
      <div x-show="detectedSite.name || detectedSite.url || detectedSite.description" class="not-prose border-2 border-blue-200 rounded-2xl p-4 bg-blue-50 mt-6 select-none">
        <div class="flex items-start gap-3">
          {% phicon "sparkle", "duotone", { class: "size-6 text-blue-600 flex-shrink-0" } %}
          <div class="flex-1">
            <h3 class="text-base font-bold mt-0 mb-2 text-blue-900">Auto-Detected Site Metadata</h3>
            <dl class="text-sm grid gap-y-4 grid-x-6 sm:grid-cols-2 md:grid-cols-3">
              <div x-show="detectedSite.suffix" class="col-span-full md:col-span-1">
                <dt class="text-blue-600 text-xs font-medium">Title Suffix:</dt>
                <dd class="font-mono text-blue-900">
                  <code class="text-xs bg-blue-100 px-2 py-1 rounded" x-text="detectedSite.suffix"></code>
                </dd>
              </div>
              <div x-show="detectedSite.name">
                <dt class="text-blue-600 text-xs font-medium">Site Name:</dt>
                <dd class="font-mono text-blue-900" x-text="detectedSite.name"></dd>
              </div>
              <div x-show="detectedSite.url">
                <dt class="text-blue-600 text-xs font-medium">Root URL:</dt>
                <dd class="font-mono text-blue-900" x-text="detectedSite.url"></dd>
              </div>
              <div x-show="detectedSite.description" class="col-span-full">
                <dt class="text-blue-600 text-xs font-medium">Description:</dt>
                <dd class="font-mono text-blue-900 line-clamp-2" x-text="detectedSite.description"></dd>
              </div>
            </dl>
            <p class="text-xs text-blue-600 mt-3 text-right italic">These values have been auto-populated below. You can edit them if needed.</p>
          </div>
        </div>
      </div>

      {# Site Metadata (Always Visible) #}
      <div class="not-prose">
        <h3 class="text-base font-bold mb-4">Site Metadata</h3>
        <div class="grid sm:grid-cols-2 gap-y-3 gap-x-6">
          <div class="col-span-full">
            <label for="site-suffix" class="block text-sm font-medium mb-1">
              Title Suffix
              <span class="text-xs font-normal text-gray-500">(regex pattern or plain text - will be removed from titles in preview and output)</span>
            </label>
            <input type="text" id="site-suffix" x-model="siteSuffix" placeholder="| Example Company" class="input w-full font-mono text-sm">
            <p class="text-xs mt-1">
              Examples: <code class="font-medium text-[10px] border border-gray-200 bg-gray-100 px-1 py-0.5 rounded"> | Example Company </code> (plain text) or <code class="font-medium text-[10px] border border-gray-200 bg-gray-100 px-1 py-0.5 rounded"> \| Example Company( Blog| Solutions)?</code> (regex)
            </p>
          </div>
          <div>
            <label for="site-name" class="block text-sm font-medium mb-1">Site Name</label>
            <input type="text" id="site-name" x-model="siteName" placeholder="Example Company" class="input w-full">
          </div>
          <div>
            <label for="site-url" class="block text-sm font-medium mb-1">Site URL</label>
            <input type="url" id="site-url" x-model="siteUrl" placeholder="https://example.com" class="input w-full">
          </div>
          <div class="col-span-full">
            <label for="site-description" class="block text-sm font-medium mb-1">Site Description</label>
            <textarea id="site-description" x-model="siteDescription" placeholder="A brief description of your website" rows="3" class="input w-full"></textarea>
          </div>
        </div>
      </div>

      {# Generate Button #}
      <div class="not-prose mt-6 flex flex-wrap gap-3">
        <button @click="generateLlmsTxt()" class="btn btn--blue" :disabled="!canGenerate || isLoading">
          {% phicon "file-text", "duotone", { class: "size-6" } %}
          <span>Generate llms.txt</span>
        </button>
        <button @click="reset()" class="btn btn--ghost text-blue-600">
          {% phicon "arrow-left", "duotone", { class: "size-5" } %}
          <span>Start Over</span>
        </button>
      </div>

    </div>

  </div>

  {# Step 3: Generated Output #}
  <div x-show="currentStep === 3" x-cloak>

    <h2>Your llms.txt File</h2>

    <div x-show="stats" class="not-prose grid sm:grid-cols-2 gap-4 mb-6 select-none">
      <div class="border-2 border-green-200 rounded-xl p-4 bg-green-50">
        <p class="text-sm text-green-600 font-medium mb-1">Total Pages</p>
        <p class="text-3xl font-bold" x-text="stats?.totalPages"></p>
      </div>
      <div class="border-2 border-blue-200 rounded-xl p-4 bg-blue-50">
        <p class="text-sm text-blue-600 font-medium mb-1">Categories</p>
        <div class="flex flex-wrap gap-2 mt-2">
          <template x-for="(count, cat) in stats?.byCategory" :key="cat">
            <span x-show="count > 0" class="text-xs px-2 py-1 bg-white rounded-full border" x-text="`${cat}: ${count}`"></span>
          </template>
        </div>
      </div>
    </div>

    {# Preview #}
    <div class="not-prose mb-6">
      <div class="flex items-center justify-between mb-2 select-none">
        <label class="text-sm font-medium">Preview</label>
        <div class="flex gap-2">
          <button @click="copyToClipboard()" class="btn btn--secondary btn--xs">
            {% phicon "copy", "duotone", { class: "size-4" } %}
            <span>Copy</span>
          </button>
          <button @click="downloadLlmsTxt()" class="btn btn--xs">
            {% phicon "download", "duotone", { class: "size-4" } %}
            <span>Download</span>
          </button>
