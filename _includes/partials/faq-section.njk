<h2>Frequently Asked Questions</h2>
<div class="text-base" itemscope itemtype="https://schema.org/FAQPage">
  {% for item in faq %}
    <details x-data="{ open: {{ loop.first }} }" class="mb-4 border-2 border-orange-200 rounded-2xl overflow-hidden" :open="{{ loop.first }}" itemscope itemprop="mainEntity" itemtype="https://schema.org/Question">
      <summary class="cursor-pointer px-4 py-3 flex items-center justify-between gap-4 font-semibold hover:text-red-600"
               @click="open=!open">
        <span itemprop="name">{{ item.question }}</span>
        <span class="shrink-0 size-5 transition-transform duration-200"
              aria-hidden="true"
              :class="open?`rotate-180`:`rotate-0`">
              {% phicon "caret-down", "bold", { class: "size-5" } %}
            </span>
      </summary>
      <div x-show="open" x-collapse itemscope itemprop="acceptedAnswer" itemtype="https://schema.org/Answer">
        <div class="px-4 pb-4 text-sm leading-relaxed clean-prose [&_table]:-mx-4 [&_table]:w-[calc(100%+2rem)]" itemprop="text">
          {{ item.answer | markdownIt | safe }}
        </div>
      </div>
    </details>
  {% endfor %}
</div>
