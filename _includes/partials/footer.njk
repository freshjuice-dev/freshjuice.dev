<footer class="[&_a:hover]:text-red-600 overflow-x-hidden" aria-labelledby="footer-heading">
  <h2 id="footer-heading" class="sr-only">Footer</h2>
  <div class="mx-auto max-w-7xl px-6 py-8 lg:px-8 text-xs leading-5">

    <div class="w-12 mx-auto">
      {% include "partials/logo-orange.njk" %}
    </div>

    <p class="prose mt-5 mb-16 text-center text-base sm:text-lg md:text-xl font-medium italic mx-auto max-w-md text-pretty">
      FreshJuice â€” blending HubSpot modules &amp; themes with&nbsp;flavor since 2019
    </p>

    <div class="grid grid-cols-1 xs:grid-cols-2 md:grid-cols-4 gap-10 mt-16 md:mt-24">
      {% for section in menu.footerSitemap %}
        <div class="">
          <p class="text-lg lg:text-xl font-semibold mb-5">{{ section.title }}</p>
          <ul class="list-none m-0 p-0 space-y-2.5 text-base lg:text-lg leading-tight {{ 'flex gap-4' if section.type == 'social' }}">
            {% for child in section.children %}
              <li>
                <a href="{{ child.url }}" class="inline-flex items-center gap-1.5">
                  {% if child.icon %}
                    {% phicon child.icon, "regular", { class: "size-7" } %}
                  {% endif %}
                  <span class="{{ 'sr-only' if section.type == 'social' }}">{{ child.title }}</span>
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endfor %}
    </div>

    <div class="mt-8 border-t border-gray-900/10 pt-8 md:flex md:items-center md:justify-between md:gap-8">
      <div class="flex flex-wrap sm:flex-nowrap space-x-6 gap-y-4 md:order-2">
        {% for item in menu.footer %}
          <a href="{{ item.url }}" class="whitespace-nowrap">{{ item.title }}</a>
        {% endfor %}
      </div>
      <p class="mt-8 md:order-1 md:mt-0 text-pretty">
        &copy;&nbsp;<span x-text="(new Date()).getFullYear()">{% year %}</span> <a href="/">FreshJuice</a>.
        All rights reserved. Except where otherwise noted, content is licensed under the
        <a href="https://creativecommons.org/licenses/by/4.0/" rel="noopener">CC BY 4.0</a>,
        and code samples under the
        <a href="https://opensource.org/licenses/MIT" rel="noopener">MIT License</a>.
      </p>
    </div>

  </div>
</footer>
