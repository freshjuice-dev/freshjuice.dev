---
layout: base.njk
---

{%- set authorData = author | getAuthorData %}

<nav class="max-w-3xl md:text-xl mx-auto w-full min-h-9 leading-none">
  <a class="inline-flex items-center gap-2 group no-underline" href="/blog/">
    {% phicon "arrow-left", "bold", { class: "size-5 group-hover:-translate-x-2 transition-transform" } %}
    <span>Back to Blog</span>
  </a>
</nav>


<main class="max-w-3xl mx-auto w-full">
  <article>

    <header class="prose grid">
      <h1 class="mb-0">{{ heading or title }}{%- if draft %} <small class="text-base">[draft]</small>{%- endif %}</h1>
      <p class="post-metadata text-sm md:text-base">
        <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate("LLLL d, yyyy") }}</time>
        {%- if updated %}
          <time datetime="{{ updated | htmlDateString }}"> &bull; updated {{ updated | readableDate("LLL d, yyyy") }}</time>
        {%- endif %}
        &bull; Written by <a href="{{ authorData.url }}">{{ authorData.name }}</a>
      </p>
    </header>

    <div class="relative">
      <div class="prose">
        {{ content | safe }}
      </div>

      {# Personal sign-off after article content #}
      {%- if authorData.signature %}
      <div class="italic">{% authorSignature author %}</div>
      {%- endif %}

      {# Share button - aside for semantic correctness #}
      <aside x-data="shareButton" x-cloak aria-label="Share this post">
        <div class="fixed md:absolute left-6 bottom-6 md:-left-16 xl:-left-20 md:top-0 md:h-full">
          <div class="md:sticky md:top-24">
            <button
              @click="share"
              class="group flex items-center p-3.5 rounded-full bg-white/70 backdrop-blur-xs backdrop-contrast-200 border border-orange-200 shadow-md hover:shadow-lg hover:border-orange-300 cursor-pointer transition-all"
              :class="message ? 'text-green-600' : 'hover:text-red-600'"
              :title="message || 'Share this post'">
              <template x-if="isApple">{% phicon "export", "regular", { class: "size-6 shrink-0" } %}</template>
              <template x-if="!isApple">{% phicon "share-network", "regular", { class: "size-6 shrink-0" } %}</template>
              <span
                class="text-sm whitespace-nowrap overflow-hidden transition-all duration-300 ease-out max-w-0 group-hover:max-w-32 opacity-0 group-hover:opacity-100 group-focus-within:opacity-100"
                :class="message ? 'max-w-32 opacity-100' : ''">
                <span class="inline-block pl-2" x-text="message || 'Share this post'"></span>
              </span>
            </button>
          </div>
        </div>
      </aside>
    </div>

    <footer>
      {%- if tags | filterTagList | length %}
        <ul class="post-tags list-none flex flex-wrap gap-2 m-0 p-0 italic text-base">
          {%- for tag in tags | filterTagList | head(4) %}
            {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
            <li class="m-0 p-0"><a href="{{ tagUrl }}" rel="nofollow" class="hover:text-red-600">#{{ tag | replace(' ', '') }}</a>{%- if not loop.last %},{% endif %}</li>
          {%- endfor %}
        </ul>
      {%- endif %}

      {# Guest Author Notice #}
      {%- if authorData.guest %}
        <p class="text-xs text-pretty my-4">
          üçä Pulp disclaimer: This is a guest squeeze! The ideas shared here belong to the author, not FreshJuice.
          We just provide the glass.<br/>
          See our <a href="/contributor-policy/" class="underline hover:text-red-600">Guest Contribution & Editorial Policy</a> for details.
        </p>
      {%- endif %}

      {# Author #}
      {%- if authorData.name %}
      <div class="p-6 bg-cursor/50 border-2 border-orange-200 rounded-2xl flex flex-col sm:flex-row gap-4 sm:gap-8 my-8">
        <a class="block size-14 sm:size-20 shrink-0" href="{{ authorData.url }}?ref=blogpost-author-photo" title="Visit {{ authorData.name }}'s Author Page">
          <span class="sr-only">Visit {{ authorData.name | split(' ') | first }}`s Author Page</span>
          <img src="{{ authorData.image }}" alt="Avatar for {{ authorData.name }}" class="rounded-full border-2 border-orange-300 size-14 sm:size-20">
        </a>
        <div class="">
          <div class="text-lg leading-none">
            <a class="hover:text-red-600 font-semibold" href="{{ authorData.url }}">{{ authorData.name }}</a>
          </div>
          <div class="">
            {{ authorData.role }} <a href="{{ authorData.companyUrl }}" class="text-red-600 font-medium group">@&nbsp;<span class="no-underline group-hover:underline">{{ authorData.company }}</span></a>
          </div>
          <div class="mt-2 text-sm">{{ authorData.content }}</div>
        </div>
      </div>
      {%- endif %}

      {# Posts navigation #}
      {%- if collections.posts %}
        <div class="pt-8 mt-8">
          {%- set previousPost = collections.posts | getPreviousCollectionItem %}
          {%- set nextPost = collections.posts | getNextCollectionItem %}
          {%- if nextPost or previousPost %}
            <ul class="list-none p-0 m-0 grid xs:grid-cols-2 gap-8">
              {%- if previousPost %}
                <li class="text-left m-0 p-0">
                  <a class="!no-underline group inline-block" href="{{ previousPost.url }}">
                    <span class="text-sm flex gap-1 items-center justify-start -ml-1">
                      {% phicon "arrow-up-left", "regular", { "class": "size-5" } %}<span>Previous</span>
                    </span>
                    <span class="group-hover:text-red-600 inline-block leading-tight text-pretty">{{ previousPost.data.title }}</span>
                  </a>
                </li>
              {%- else %}
                <li></li>
              {%- endif %}
              {%- if nextPost %}
                <li class="text-right m-0 p-0">
                  <a class="!no-underline group inline-block" href="{{ nextPost.url }}">
                    <span class="text-sm flex gap-1 items-center justify-end -mr-1">
                      <span>Next</span>{% phicon "arrow-up-right", "regular", { "class": "size-5" } %}
                    </span>
                    <span class="group-hover:text-red-600 inline-block leading-tight text-pretty">{{ nextPost.data.title }}</span>
                  </a>
                </li>
              {%- else %}
                <li></li>
              {%- endif %}
            </ul>
          {%- endif %}
        </div>
      {%- endif %}
    </footer>

  </article>
</main>
