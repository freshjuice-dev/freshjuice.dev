---
layout: base.njk
---

<div class="grid lg:flex lg:grow gap-8 lg:gap-12">

  <main class="prose mx-auto lg:max-w-full order-2 grow py-8">

    <div class="prose md:prose-xl">
      <h1>{{ title }}</h1>
    </div>

    {{ content | safe }}

  </main>


  <aside class="order-1 lg:w-[19rem] shrink-0 border-b lg:border-b-0 lg:border-r border-gray-900/10 dark:border-gray-100/10 py-8 lg:pr-8 space-y-12">

    {% for section in menu.docs %}
      <div class="mb-4">
        <h3 class="text-lg font-semibold mb-3">{{ section.name }}</h3>
        <ul class="list-none m-0 p-0 border-l border-gray-900/5 dark:border-gray-100/5 space-y-2">
          {% for item in section.items %}
            <li>
              <a href="{{ item.url }}"
                 class="block pl-6 py-1 -ml-px border-l hover:border-current {% if page.url == item.url %}border-current !text-red-600 font-semibold{% else %}border-transparent opacity-75 hover:opacity-100 !text-zinc-600 dark:!text-zinc-300{% endif %}">{{ item.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>
    {% endfor %}

  </aside>

</div>
